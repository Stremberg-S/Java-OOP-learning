<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.image.ImageView?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.teht3.tehtava_3.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>


    <ImageView fx:id="savoniaLogo"
               pickOnBounds="true"/>
    <TextField promptText="Nimi"
               maxWidth="300"/>
    <ComboBox promptText="Tuotetyyppi"
              minWidth="300"
              fx:id="type"/>
    <DatePicker promptText="date" minWidth="300"/>
    <TextField promptText="Myyntihinta"
               maxWidth="300"/>
    <TextField promptText="Ostajan nimi"
               maxWidth="300"/>
    <Label fx:id="saveText"/>
    <Button text="Tallenna"
            fx:id="saveButton"
            onAction="#onSaveButtonAction"
            cancelButton="true"
            layoutX="50.0"
            layoutY="767.0"
            mnemonicParsing="false"
            prefWidth="100.0"
            alignment="BOTTOM_CENTER"/>
    <Button text="Sulje"
            fx:id="closeButton"
            onAction="#onCloseButtonAction"
            cancelButton="true"
            layoutX="50.0"
            layoutY="767.0"
            mnemonicParsing="false"
            prefWidth="100.0"/>
</VBox>

